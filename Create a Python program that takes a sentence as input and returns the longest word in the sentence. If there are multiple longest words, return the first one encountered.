def longest_word(sentence):
    words = sentence.split()
    longest = ""
    max_length = 0
    for word in words:
        if len(word) > max_length:
            longest = word
            max_length = len(word)
    return longest
input_sentence = "The quick brown fox jumps over the lazy dog"
print(longest_word(input_sentence))  # Output: "quick"
